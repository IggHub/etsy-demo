<div class="jumbotron">
  <h1>Handcrafted quality items around the world.</h1>
  <h2>If you don't like it, <br />
  <em>well, too bad.</em></h2>
</div>
  <div class="center">
    <div class="row">
      <% @listings.each do |listing| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <%= image_tag listing.image.url %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= "sold by #{listing.user.name}" %></p>
              <p><%= listing.description %></p>
              </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>

</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
